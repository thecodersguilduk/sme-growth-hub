<div id="course-grid-container" class="grid grid-cols-1 md:mb-16 mb-14 max-w-3xl mx-auto pt-12 px-6">
  <div class="">
  <h2 class="text-3xl font-bold tracking-tight text-white sm:text-4xl text-blue-200">Featured Courses and Apprenticeships</h3>
  <p class="text-white mb-6">Learn how to grow your business with our expert advice</p>
  </div>


  <div class="course-grid-internal-container flex flex-col w-full">
      <div id="course-grid" class="w-full flex gap-x-4 items-stretch">
          {% for course in courses %}
            {% if course.isActive %}
            <div class="px-4 self-stretch">
              <div class="flex flex-col overflow-hidden rounded-lg shadow-lg shadow-primary min-h-[375px]">
                <div class="flex-shrink-0">
                  <img class="h-48 w-full object-cover" src="https://images.unsplash.com/photo-1496128858413-b36217c2ce36?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1679&q=80" alt="">
                </div>
                <div class="flex flex-1 flex-col justify-between bg-white p-6">
                  <div class="flex-1">
                    <a href="#" class="mt-2 block">
                      <p class="text-xl font-semibold text-gray-900">{{course.title}}</p>
                      <p class="mt-3 text-base text-gray-500">{{ course.subtitle }}</p>
                    </a>
                  </div>
                </div>
              </div>
            </div>
              
            {% endif %}
          {% endfor %}
      </div>
      <div class="flex justify-center items-center mt-8">
          <button type="button" class="prev mr-6">
            <img alt="click to see the previous courses" src="../img/Chevron-Left-list.svg" class="h-6 w-6 m-auto rotate-180" />
          </button>
          <div class="dots"></div>
          <button type="button" class="next ml-6">
            <img alt="click to the the next courses" src="../img/Chevron-Left-list.svg" class="h-6 w-6 m-auto" />
          </button>
        </div>
  </div> 
  
  

</div>